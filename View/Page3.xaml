<Page x:Class="FlightSimulatorApp.View.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorApp.View"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Page3">

    <Grid Background="Gray">
        <ListView Margin="10,10,0,10" Name="List" ItemsSource="{Binding VM_Data_members}" HorizontalAlignment="Left" Width="166" SelectionChanged="List_SelectionChanged"/>

        <oxy:Plot Title="Graph" Width="200" Height="200" Margin="192,12,208,0" VerticalAlignment="Top" d:LayoutOverrides="Height">
            <oxy:Plot.Series>
                <oxy:LineSeries Name="GraphPoints" ItemsSource="{Binding VM_Points}"/>
            </oxy:Plot.Series>
        </oxy:Plot>
    </Grid>
</Page>
