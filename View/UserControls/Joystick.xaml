<UserControl x:Class="FlightSimulatorApp.View.UserControls.Joystick"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="213.6" d:DesignWidth="223.2">
    <Grid Margin="0,0,5.2,-0.4">
        <Grid.RowDefinitions>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="79*"/>
        </Grid.RowDefinitions>
        <Grid Margin="10,20,27,10" RenderTransformOrigin="0.577,0.5" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="11"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush/>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="111*"/>
                <ColumnDefinition Width="51*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Canvas  x:Name="Base" Margin="268,26,-266,133" Grid.Column="2" Grid.Row="1">
                <Ellipse HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="150" Canvas.Top="-25" Canvas.Left="-425">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#FF2C2A2A" Offset="1" />
                            <GradientStop Color="#FF79A69A" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>
                <Canvas HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="68"  Margin="0,-8,0,0"  />
                <Ellipse Fill="Gray" Height="36" Canvas.Left="-367" Stroke="Black" StrokeThickness="1" Width="36" Canvas.Top="33"/>
                <Path Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z" Fill="#FFA1C3B7" HorizontalAlignment="Left" Height="20" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" Width="39.75" Canvas.Left="-369" Canvas.Top="-15" RenderTransformOrigin="0.189,-0.925" />
                <Path Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z" Fill="#FF97BDB3" HorizontalAlignment="Left" Height="16.875" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" Width="42.75" RenderTransformOrigin="-0.994,6.686" Canvas.Left="-373" Canvas.Top="125">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="-1"/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.456"/>
                            <TranslateTransform Y="-227.335"/>
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
                <Path Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z" Fill="#FF9CCBBE" HorizontalAlignment="Left" Height="18.375" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" Width="42.75" RenderTransformOrigin="0.248,0.887" Canvas.Left="-306.661" Canvas.Top="44.339">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="90"/>
                            <TranslateTransform X="3.66" Y="-17.885"/>
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
                <Path Data="M205.75,65.625 L226.875,47.25 L248.5,65.625 z" HorizontalAlignment="Left" Height="19.875" Stretch="Fill" UseLayoutRounding="False" VerticalAlignment="Top" Width="44.25" RenderTransformOrigin="0.5,0.5" Canvas.Left="-435" Canvas.Top="43" Fill="#FFB0D1C8">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <RotateTransform Angle="90" />
                            <ScaleTransform ScaleX="-1" />
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Canvas>
        </Grid>
        <Slider x:Name="Throttle" Value="{Binding VM_Throttle}" Margin="-214,79,258,-32" VerticalAlignment="Top" Height="32" Maximum="1" Minimum="0" TickFrequency="0.01" RenderTransformOrigin="1.526,6.049" Cursor="SizeWE" ScrollViewer.HorizontalScrollBarVisibility="Auto" Grid.Row="1" >
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="90.644"/>
                    <TranslateTransform X="-216.984" Y="-140.578"/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label Content="← throttle →" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" Margin="-50,90,134,7" RenderTransformOrigin="0.5,0.5" >
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90.02"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Slider x:Name="Rudder" Value="{Binding VM_Rudder}" Margin="17,44,5,0" VerticalAlignment="Top" Height="18" Maximum="1" Minimum="-1" TickFrequency="0.1" RenderTransformOrigin="0.5,0.5" Foreground="#FFE5E5E5" BorderBrush="#FFCF3C3C" Grid.Row="1"  >
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="360.709"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
        <Label Content="← aileron →" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" Margin="30,0,26,108.8" />
