<Page x:Class="FlightSimulatorApp.View.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorApp.View"
      mc:Ignorable="d" 
      Title="Page2" Height="680" Width="1250">

    <Grid x:Name="text" Background="#FFB9B2B2">
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Button x:Name="Play" Content="Play"  HorizontalAlignment="Left" Margin="10,562,0,0" VerticalAlignment="Top" Width="145" Click="Play_Click" Height="30" FontSize="18"/>
        <Button x:Name="Pause" Content="Pause" HorizontalAlignment="Left" Margin="148,562,0,0" VerticalAlignment="Top" Width="145" Click="Pause_Click" Height="30" FontSize="18"/>
        <Slider x:Name="Slider_Time" Value="{Binding VM_Percentage}" Margin="77,604,576.6,0" VerticalAlignment="Top" Height="20" Maximum="100" Minimum="0" TickFrequency="1" />
        <TextBox x:Name="Overall_Time" HorizontalAlignment="Right" Height="32" Margin="0,0,502,46" Text="Overall time" VerticalAlignment="Bottom" Width="57" FontSize="20" Background="{x:Null}"/>
        <TextBox x:Name="Relative_Time" HorizontalAlignment="Left" Height="32" Margin="18,0,0,46" Text="Relative time" VerticalAlignment="Bottom" Width="57" FontSize="20" Background="{x:Null}"/>
        <!-- Button Content="Speed" HorizontalAlignment="Left" Margin="331,562,0,0" VerticalAlignment="Top" Width="145" Height="30" FontSize="18"/-->
        <ComboBox x:Name="Speed"  HorizontalAlignment="Left" Margin="317,562,0,0" VerticalAlignment="Top" Width="109" Height="30" FontSize="18" SelectionChanged="Speed_SelectionChanged" RenderTransformOrigin="0.864,-2.542">
            <ComboBoxItem x:Name="_05_Speed" Content="x0.5" HorizontalAlignment="Right" Margin="0,0,0.2,0" Width="107"/>
            <ComboBoxItem x:Name="_10_Speed" IsSelected="True" Content="x1.0"/>
            <ComboBoxItem x:Name="_15_Speed" Content="x1.5"/>
        </ComboBox>
    </Grid>
</Page>