<Page x:Class="FlightSimulatorApp.View.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FlightSimulatorApp.View" 
      xmlns:UserControls="clr-namespace:FlightSimulatorApp.View.UserControls"
      mc:Ignorable="d" 
      Title="Page2" Height="600" Width="600">



    <Grid Background="#FFB9B2B2">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="230.4"/>
        </Grid.RowDefinitions>
        <UserControls:VideoPlayer x:Name="videoplayer"  HorizontalAlignment="Left" Margin="-5,0,0,-2" VerticalAlignment="Bottom" Height="88" Width="602" Grid.Row="1" d:LayoutOverrides="VerticalAlignment"/>
        <UserControls:DataFlight x:Name="dataflight"  HorizontalAlignment="Left" Margin="0,1,0,89" Width="266" d:LayoutOverrides="HorizontalAlignment" Grid.RowSpan="2" Loaded="dataflight_Loaded"/>
        <UserControls:Joystick x:Name="joystick"  HorizontalAlignment="Left" Margin="346,0,0,67.6" Width="227" RenderTransformOrigin="0.5,0.5" >
            <UserControls:Joystick.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.364"/>
                    <TranslateTransform/>
                </TransformGroup>
            </UserControls:Joystick.RenderTransform>
        </UserControls:Joystick>
    </Grid>
</Page>