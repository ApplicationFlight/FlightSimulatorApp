        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        mc:Ignorable="d"
        Title="Flight Simulator" Height="650" Width="600">
    <Grid Background="#FFB9B2B2" Margin="-2,20,-4.4,0" Width="600" Height="600">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="459*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="UploadCVSButton" Content="Upload CSV file" Margin="198,253,56.2,246" Click="UploadCVSButton_Click" FontSize="20" d:LayoutOverrides="TopMargin, BottomMargin"/>
